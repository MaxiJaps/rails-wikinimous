<h1 class="text-center pb-5">My articles</h1>

<ul>
<% @articles.each do |article| %>
<li class="list-group-item text-center mb-2"><%= link_to article.title, article_path(article) %> -- <%= link_to "Delete", article_path(article),
                                                  method: :delete,
                                                  data: { confirm: "Are you sure?" } %> </li>
<%end %>
</ul>
<div class="btn">
  <%= link_to "New article", new_article_path %>
</div>
